<!DOCTYPE html>
<html lang="en">

<head>
  {{>body}}
  {{>header}}
</head>

<body>
  {{>navbar}}
  <div class="container-fluid main_header">
    <div class="row">
      <div class="col-md-4 col-10 mx-auto login">
        <div class="RegCon">
          <h1>Log In</h1>
        </div>

        <form action="/logIn" method="POST">
          <div class="form-group detail">
            <label for="exampleInputEmail1">Email address</label><span style="color: red;"> {{msg3}} {{msg4}} </span>
            <input type="email" class="form-control" name="email" id="exampleInputEmail1" aria-describedby="emailHelp"
              placeholder="Enter email" required>
          </div>
          <div class="form-group detail">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" name="password" id="exampleInputPassword1"
              placeholder="Password" required>
          </div>
          <div class="form-check check">
            <input type="checkbox" class="form-check-input" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1">Remember me</label><span class="loginfp"><a href="/register">Sign Up</a>          <a href="/forgot" style="margin-left: 20px;">Forgot password</a></span>
          </div>
          <button type="submit" class="btn btn-primary">log In</button>
        </form>
      </div>
    </div>
  </div>

  {{>footer}}
</body>

</html>