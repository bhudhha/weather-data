<!DOCTYPE html>
<html lang="en">

<head>

    {{>body}}
    {{>header}}
</head>

<body>
    {{>navbar}}
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="row">
                    <div class="col-md-6 col-12">
                        <div class="RegCon">
                            <h1>Registration</h1>
                        </div>

                        <form action="/register" method="POST">
                            <div class="form-group detail">
                                <label for="exampleInputEmail1">First Name</label>
                                <input type="text" name="firstname" class="form-control" id="exampleInputEmail1"
                                    placeholder="First Name" required>
                            </div>
                            <div class="form-group detail">
                                <label for="exampleInputEmail1">Last Name</label>
                                <input type="text" name="lastname" class="form-control" id="exampleInputEmail1"
                                    placeholder="Last Name" required>
                            </div>
                            <div class="form-group detail">
                                <label for="exampleInputEmail1">City Name</label>
                                <input type="text" name="cityname" class="form-control" id="exampleInputEmail1"
                                    placeholder="City Name" required>
                            </div>
                            <div class="form-group detail">
                                <label for="exampleInputEmail1">Email address</label><span style="color: red;">
                                    {{msg2}} </span>
                                <input type="email" name="email" class="form-control" id="exampleInputEmail1"
                                    placeholder="Enter email" required>
                            </div>
                            <div class="form-group detail">
                                <label for="exampleInputPassword1">Password</label> <span style="color: red;">
                                    {{msg1}} </span>
                                <input type="password" name="password" class="form-control" id="exampleInputPassword1"
                                    placeholder="Password" required>
                            </div>
                            <div class="form-group detail">
                                <label for="exampleInputPassword1">Confirm Password</label> <span style="color: red;">
                                    {{msg}} </span>
                                <input type="password" name="confirmpassword" class="form-control"
                                    id="exampleInputPassword1" placeholder="Confirm Password" required>
                            </div>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </form>
                    </div>
                    <div class="col-md-6 col-12 right">
                        <div>
                            <figure>
                                <img src="img/reg2.png" alt="">
                            </figure>
                        </div>
                        <div>
                            <h3>already have account <a href="/logIn">Sign In</a></h3>
                            <h3><a href="/forgot">Forgot Password</a></h3>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    {{>footer}}
</body>

</html>