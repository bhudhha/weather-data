<!DOCTYPE html>
<html lang="en">

<head>
    {{>body}}
    {{>header}}
</head>

<body>
    {{>navbar}}
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-4 col-10 mx-auto login">
                <div class="RegCon">
                    <h1>Change Password</h1>
                </div>

                <form action="/forgot" method="POST">
                    <div class="form-group detail">
                        <label for="exampleInputEmail1">Email address</label><span style="color: red;"> {{msg11}}
                        </span>
                        <input type="email" class="form-control" name="email" id="exampleInputEmail1"
                            aria-describedby="emailHelp" placeholder="Enter email" required>
                    </div>
                    <div class="form-group detail">
                        <label for="exampleInputPassword1">Password</label>
                        <input type="password" class="form-control" name="password" id="exampleInputPassword1"
                            placeholder="Password" required>
                    </div>
                    <div class="form-group detail">
                        <label for="exampleInputPassword1">confirm Password</label>
                        <input type="password" class="form-control" name="confirmpassword" id="exampleInputPassword1"
                            placeholder="confirmPassword" required>
                    </div>

                    <button type="submit" class="btn btn-primary">Change</button>
                </form>
            </div>
        </div>
    </div>
    {{>footer}}
</body>

</html>